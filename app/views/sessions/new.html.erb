<h1>Sign In</h1>
<%= form_with url: signin_path do |form| %>


<div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email,
                        class: 'form-control',
                        placeholder: 'chucknorris@texas.us' %>
</div>

<div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password,
                            class: 'form-control',
                            placeholder: 'Password'%>
</div>



<div class="mb-3">
    <%= form.submit 'Sign In', class: 'btn btn-secondary' %>
</div>

<% end %>