<div class="d-flex align-items-center justify-content-between">
    <h1>Twitter Accounts</h1>

    <%= link_to 'Connect a Twitter account',
                               '/auth/twitter',
                               class: 'btn btn-primary' %>
</div>
<% @twitter_accounts.each do |account| %>
<div class="d-flex align-items-center mb-4">
    <div class="me-4">
        <%= image_tag account.image, class: 'rounded-circle' %>
        <%= link_to "#{account.username}",
        "https://twitter.com/#{account.username}",
        target: :blank %>
    </div>
</div>
<% end %>